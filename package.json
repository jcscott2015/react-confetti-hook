{
  "name": "react-library",
  "version": "1.0.0",
  "description": "A React hook for adding confetti effects to your applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "vite",
    "lint": "eslint src/**/*.ts*",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "library",
    "components",
    "hooks",
    "utilities"
  ],
  "author": "John C. Scott",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "react": "^latest",
    "react-dom": "^latest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^latest",
    "@typescript-eslint/parser": "^latest",
    "@vitejs/plugin-react": "^latest",
    "eslint-plugin-react-hooks": "^latest",
    "eslint-plugin-react-refresh": "^latest",
    "eslint": "^latest",
    "jsdom": "^latest",
    "rollup-plugin-typescript2": "^latest",
    "rollup": "^latest",
    "typescript": "^latest",
    "vite": "^latest",
    "vitest": "^latest"
  }
}
